                    <longitud>80°48'00.95" E</longitud>
                    <latitud>6°47'07.11" N</latitud>
                    <altitud>2084 m</altitud>
                </coordenadas>
                <distancia unidades="km">0</distancia>
                <galeria_fotos>
                    <fotografia>mini_fin_del_mundo</fotografia>
                </galeria_fotos>
                <galeria_videos>
                    <video>video1</video>
                </galeria_videos>
            </hito>
            <hito nombre="Mirador del Fin del Mundo"
                descripcion="Acantilado de 870 metros de altura con vistas espectaculares">
                <coordenadas>
                    <longitud>80°47'39.67" E</longitud>
                    <latitud>6°46'49.60" N</latitud>
                    <altitud>2088 m</altitud>
                </coordenadas>
                <distancia unidades="km">1.3</distancia>
                <galeria_fotos>
                    <fotografia>fin_del_mundo</fotografia>
